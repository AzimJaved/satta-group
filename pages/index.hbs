{{> header }}
<section>
    <script>
        function onLoad(){
            var html = "";
           // var players = [ "Aaron Finch", "David Warner", "Usman Khawaja","Steven Smith", "Glenn Maxwell", "Marcus Stoinis","Alex Carey", "Pat Cummins", "Mitchell Starc","Nathan Lyon","Jason Behrendorff", 
          //  "Martin Guptill" ,"Henry Nicholls", "Kane Williamson", "Ross Taylor", "Tom Latham", "James Neeshan", "Colin de Grandhomme", "Mitchell Santner", "Ish Sodhi", "Lockie Ferguson", "Trent Boult" ]
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function() {
        if (this.readyState == 4 && this.status == 200) {
                let players = xhttp.response.teams
                players.forEach( (player) =>{
                    var txt = '<div class="card-panel grey darken-3"> <p><label><input type="checkbox" name="players" value="' +player+'" /> <span class = "white-text">'+player+'</label></p></span></div><br>'
                    html += txt;
                })
            document.getElementById('fmcheckbox').innerHTML += html;
            }
        }
        xhttp.responseType = "json"
        xhttp.open("GET", "/teams", true);
        xhttp.send(); 
    }
    window.onload = onLoad;
    </script>
    <div class="container">
    <form method="POST" action="/sattaSubmit" id="tmform">
        <div id="fmcheckbox">
        </div>
        <div class="input-field">
          <input id="name" type="text" name="name" class="validate white-text">
          <label for="name">Name</label>
        </div>
        <br>
        <br>
        <button class="btn waves-effect  yellow accent-2  grey-text text-darken-4" type="submit">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
    </div>
</section>

